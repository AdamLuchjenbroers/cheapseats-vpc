{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "XonoticListCfgBucket",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::deimos-configmgmt"
        },
        {
            "Sid": "XonoticListAccessBucket",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::deimos-configmgmt/Xonotic/*"
        },
        {
            "Sid": "XonoticLogging",
            "Effect": "Allow",
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::deimos-configmgmt/Xonotic/logs/*"
        },
        {
            "Sid" : "XonoticParameters",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameters",
                "ssm:GetParameter"
            ],
            "Resource": [ "arn:aws:ssm:*:495602461790:parameter/Deimos/*"
                        , "arn:aws:ssm:*:495602461790:parameter/Xonotic/*" ]
        }
    ]
}
