{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "HomeFinCFFetchParameters",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameters",
                "ssm:GetParameter"
            ],
            "Resource": [
                "arn:aws:ssm:*:495602461790:parameter/Deimos/*",
                "arn:aws:ssm:*:495602461790:parameter/HomeFin/*"
            ]
        },
        {
            "Sid": "HomeFinCFSetParameters",
            "Effect": "Allow",
            "Action": [
                "ssm:PutParameter",
                "ssm:DeleteParameter",
                "ssm:AddTagsToResource",
                "ssm:RemoveTagsFromResource"
            ],
            "Resource": [
                "arn:aws:ssm:*:495602461790:parameter/HomeFin/*"
            ]
        },
        {
            "Sid": "HomeFinCFConfigBucketA",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": [
                "arn:aws:s3:::deimos-configmgmt"
            ]
        },
        {
            "Sid": "HomeFinCFBucketAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:GetObjectVersion"
            ],
            "Resource": [
                "arn:aws:s3:::deimos-configmgmt/HomeFin/*"
            ]
        },
        {
            "Sid": "HomeFinCFCreateBucket",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketPolicyStatus",
                "s3:PutAnalyticsConfiguration",
                "s3:PutAccelerateConfiguration",
                "s3:PutMetricsConfiguration",
                "s3:PutReplicationConfiguration",
                "s3:CreateBucket",
                "s3:PutBucketCORS",
                "s3:DeleteBucketPolicy",
                "s3:GetBucketPolicy",
                "s3:PutInventoryConfiguration",
                "s3:PutEncryptionConfiguration",
                "s3:GetBucketObjectLockConfiguration",
                "s3:PutBucketNotification",
                "s3:DeleteBucketWebsite",
                "s3:PutBucketWebsite",
                "s3:PutBucketTagging",
                "s3:PutBucketLogging",
                "s3:PutLifecycleConfiguration",
                "s3:PutBucketPolicy",
                "s3:PutBucketObjectLockConfiguration",
                "s3:DeleteBucket",
                "s3:PutBucketVersioning"
            ],
            "Resource": "*"
        },
        {
            "Sid": "HomeFinDynamoDBCreate",
            "Effect": "Allow",
            "Action": [
                "dynamodb:CreateTable",
                "dynamodb:TagResource",
                "dynamodb:UntagResource",
                "dynamodb:DescribeTable",
                "dynamodb:DeleteTable",
                "dynamodb:UpdateTable",
                "dynamodb:ListTagsOfResource"
            ],
            "Resource": "arn:aws:dynamodb:*:495602461790:table/homefin*"
        },
        {
            "Sid": "HomeFinDynamoDBList",
            "Effect": "Allow",
            "Action": [
                "dynamodb:ListGlobalTables",
                "dynamodb:ListTables",
                "dynamodb:DescribeReservedCapacity",
                "dynamodb:DescribeLimits"
            ],
            "Resource": "*"
        },
        {
            "Sid": "HomeFinLambdaCreate",
            "Effect": "Allow",
            "Action": [
                "lambda:CreateFunction",
                "lambda:UpdateFunctionCode",
                "lambda:AddPermission",
                "lambda:GetFunction",
                "lambda:UpdateFunctionConfiguration",
                "lambda:GetFunctionConfiguration",
                "lambda:DeleteFunction",
                "lambda:PublishVersion",
                "lambda:GetPolicy",
                "lambda:RemovePermission",
                "lambda:ListTags",
                "lambda:TagResource",
                "lambda:UntagResource"
            ],
            "Resource": "arn:aws:lambda:*:495602461790:function:homefin*" 
        },
        {
            "Sid": "HomeFinKmsCreate",
            "Effect": "Allow",
            "Action": [
                "kms:Create*",
                "kms:Describe*",
                "kms:Enable*",
                "kms:List*",
                "kms:Put*",
                "kms:Update*",
                "kms:Revoke*",
                "kms:Disable*",
                "kms:Get*",
                "kms:Delete*",
                "kms:ScheduleKeyDeletion",
                "kms:CancelKeyDeletion",
                "kms:TagResource",
                "kms:UntagResource"
            ],
            "Resource": "*" 
        },
        {
            "Sid": "HomeFinIamCreate",
            "Effect": "Allow",
            "Action": [
                "iam:Create*",
                "iam:Delete*",
                "iam:List*",
                "iam:Put*",
                "iam:Update*",
                "iam:Attach*",
                "iam:Tag*",
                "iam:Untag",
                "iam:PassRole"
            ],
            "Resource": "*" 
        },
        {
            "Sid": "HomeFinGlueCreate",
            "Effect": "Allow",
            "Action": [
                "glue:CreateDatabase",
                "glue:CreateCrawler",
                "glue:CreateTable",
                "glue:DeleteDatabase",
                "glue:CreateSecurityConfiguration",
                "glue:DeleteCrawler",
                "glue:DeleteTable",
                "glue:DeleteSecurityConfiguration",
                "glue:UpdateDatabase",
                "glue:UpdateTable",
                "glue:UpdateCrawler",
                "glue:GetCrawlers",
                "glue:GetCrawler",
                "glue:GetDatabase",
                "glue:GetSecurityConfiguration",
                "glue:GetSecurityConfigurations",
                "glue:GetTable",
                "glue:ListCrawlers",
                "glue:StopCrawler",
                "glue:TagResource",
                "glue:UntagResource",
                "glue:GetTags"
            ],
            "Resource": [
               "arn:aws:glue:*:495602461790:catalog",
               "arn:aws:glue:*:495602461790:database/homefin",
               "arn:aws:glue:*:495602461790:userDefinedFunction/homefin/*",
               "arn:aws:glue:*:495602461790:crawler/*",
               "arn:aws:glue:*:495602461790:table/homefin/*"
            ]
        }

    ]
}
