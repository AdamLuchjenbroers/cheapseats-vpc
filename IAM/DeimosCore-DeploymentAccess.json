{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DeimosCoreVPCAccess",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*",
                "ec2:CreateVpc",
                "ec2:DeleteVpc",
                "ec2:ModifyVpcAttribute",
                "ec2:CreateInternetGateway",
                "ec2:DeleteInternetGateway",
                "ec2:RebootInstances",
                "ec2:CreateRouteTable",
                "ec2:DeleteRouteTable",
                "ec2:AssociateRouteTable",
                "ec2:ReplaceRouteTableAssociation",
                "ec2:CreateRoute",
                "ec2:ReplaceRoute",
                "ec2:DeleteRoute",
                "ec2:CreateDhcpOptions",
                "ec2:CreateSubnet",
                "ec2:DeleteSubnet",
                "ec2:TerminateInstances",
                "ec2:DeleteRoute",                
                "ec2:RunInstances",
                "ec2:AttachInternetGateway",
                "ec2:StopInstances",
                "ec2:ModifySubnetAttribute",
                "ec2:CreateDefaultSubnet",
                "ec2:StartInstances",
                "ec2:DeleteSecurityGroup",
                "ec2:AssociateSubnetCidrBlock",
		"ec2:AllocateAddress",
                "ec2:CreateTags",
                "ec2:DeleteTags"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DeimosCoreParameters",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameters",
                "ssm:GetParameter",
                "ssm:PutParameter",
                "ssm:DeleteParameter",
                "ssm:AddTagsToResource",
                "ssm:RemoveTagsFromResource"
            ],
            "Resource": [
                "arn:aws:ssm:*:495602461790:parameter/Deimos/*"
            ]
        },
        {
            "Sid": "FetchCFResources",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::deimos-configmgmt/Resources/*"
        },
        {
            "Sid": "DeimosCoreIAM",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "iam:UpdateAssumeRolePolicy",
                "iam:PassRole",
                "iam:GetPolicy",
                "iam:GetRole",
                "iam:DeleteRolePolicy",
                "iam:DeletePolicy",
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:AttachRolePolicy",
                "iam:UpdateRole",
                "iam:PutRolePolicy",
                "iam:GetRolePolicy",
                "iam:ListRoleTags",
                "iam:TagRole",
                "iam:UntagRole"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "XonoticLambdaCreate",
            "Effect": "Allow",
            "Action": [
                "lambda:CreateFunction",
                "lambda:UpdateFunctionCode",
                "lambda:AddPermission",
                "lambda:GetFunction",
                "lambda:UpdateFunctionConfiguration",
                "lambda:GetFunctionConfiguration",
                "lambda:DeleteFunction",
                "lambda:PublishVersion",
                "lambda:GetPolicy",
                "lambda:RemovePermission",
                "lambda:ListTags",
                "lambda:TagResource",
                "lambda:UntagResource"
            ],
            "Resource": "arn:aws:lambda:*:495602461790:function:*"
        }
    ]
}
