{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DeimosCoreVPCAccess",
            "Effect": "Allow",
            "Action": [
              "ec2:*",
              "autoscaling:*",
              "ssm:GetParameters",
              "ssm:GetParameter",
              "sns:*Topic",     
              "sns:Get*",
              "sns:List*",                       
              "sns:TagResource",
              "sns:UntagResource",   
              "sns:Subscribe",
              "sns:Unsubscribe"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DeimosCoreParameters",
            "Effect": "Allow",
            "Action": [
                "ssm:PutParameter",
                "ssm:DeleteParameter",
                "ssm:AddTagsToResource",
                "ssm:RemoveTagsFromResource"
            ],
            "Resource": [
                "arn:aws:ssm:*:495602461790:parameter/Deimos/*"
            ]
        },
        {
            "Sid": "FetchCFResources",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::deimos-configmgmt/Resources/*"
        },
        {
            "Sid": "DeimosCoreIAM",
            "Effect": "Allow",
            "Action": [
                "iam:GetRole",
                "iam:UpdateAssumeRolePolicy",
                "iam:PassRole",
                "iam:GetPolicy",
                "iam:GetRole",
                "iam:DeleteRolePolicy",
                "iam:DeletePolicy",
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:UpdateRole",
                "iam:PutRolePolicy",
                "iam:GetRolePolicy",
                "iam:ListRoleTags",
                "iam:TagRole",
                "iam:UntagRole"
            ],
            "Resource": [
                "*"
            ]
        },
	{
	    "Sid": "DeimosGetPackages",
	    "Effect" : "Allow",
	    "Action" : [
	       "s3:GetObject",
	       "s3:GetObjectVersion",
	       "s3:ListBucket"
	    ],
	    "Resource" : [
                "arn:aws:s3:::codepipeline-ap-southeast-2-810622726934",
                "arn:aws:s3:::codepipeline-ap-southeast-2-810622726934/*"
            ]
	},
    {
        "Sid": "DeimosLambdaCreate",
        "Effect": "Allow",
        "Action": [
            "lambda:CreateFunction",
            "lambda:UpdateFunctionCode",
            "lambda:AddPermission",
            "lambda:GetFunction",
            "lambda:UpdateFunctionConfiguration",
            "lambda:GetFunctionConfiguration",
            "lambda:DeleteFunction",
            "lambda:PublishVersion",
            "lambda:GetPolicy",
            "lambda:RemovePermission",
            "lambda:ListTags",
            "lambda:TagResource",
            "lambda:UntagResource"
        ],
        "Resource": "arn:aws:lambda:*:495602461790:function:*"
    },
    {
        "Sid": "DeimosEventCreate",
        "Effect": "Allow",
        "Action" : [
            "events:*Rule",
            "events:*Targets",
            "events:Tag*",
            "events:Untag*"
        ],
        "Resource" : "*"
    },
    {
        "Sid" : "DeimosCodeDeploy",
        "Effect" : "Allow",
        "Action" : [
            "codedeploy:Get*",
            "codedeploy:List*",
            "codedeploy:TagResource",
            "codedeploy:UntagResource",
            "codedeploy:Create*",
            "codedeploy:Delete*"
        ],
        "Resource" : "*"
    }
    ]
}
