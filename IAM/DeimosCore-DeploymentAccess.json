{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DeimosCoreVPCAccess",
            "Effect": "Allow",
            "Action": [
                "ec2:Describe*",
                "ec2:CreateVpc",
                "ec2:DeleteVpc",
                "ec2:ModifyVpcAttribute",
                "ec2:RebootInstances",
                "ec2:CreateDhcpOptions",
                "ec2:CreateSubnet",
                "ec2:DeleteSubnet",
                "ec2:ReplaceRouteTableAssociation",
                "ec2:TerminateInstances",
                "ec2:DeleteRoute",                
                "ec2:RunInstances",
                "ec2:AttachInternetGateway",
                "ec2:StopInstances",
                "ec2:ReplaceRoute",
                "ec2:ModifySubnetAttribute",
                "ec2:DeleteRouteTable",
                "ec2:AssociateRouteTable",
                "ec2:CreateDefaultSubnet",
                "ec2:StartInstances",
                "ec2:DeleteSecurityGroup",
                "ec2:AssociateSubnetCidrBlock",
                "ec2:CreateTags",
                "ec2:DeleteTags"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DeimosCoreParameters",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameters",
                "ssm:GetParameter",
                "ssm:PutParameter",
                "ssm:DeleteParameter",
                "ssm:AddTagsToResource",
                "ssm:RemoveTagsFromResource"
            ],
            "Resource": [
                "arn:aws:ssm:*:495602461790:parameter/Deimos/*"
            ]
        },
        {
            "Sid": "FetchCFResources",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::deimos-configmgmt/Templates/*"
        }
    ]
}
