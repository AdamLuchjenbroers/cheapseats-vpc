{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description" : "Subnets across all three Availability Zones",

  "Parameters" : {
    "SubnetGroupName" : {
      "Type" : "String",
      "Description" : "Name used for this subnet group"
    },
    "CidrRange" : {
      "Type" : "String",
      "Description" : "CIDR Range for these subnets"
    },
    "VpcId" : {
      "Type" : "String",
      "Description" : "VPC ID of VPC"
    },
    "MaskSize" : {
      "Type" : "Number",
      "Description" : "The number of bits to assign to the subnet mask for each subnet",
      "Default" : 8
    }
  },

  "Resources" : {
    "RouteTable" : {
      "Type" : "AWS::EC2::RouteTable",
      "Properties" : {
        "VpcId" : { "Ref" : "VpcId" }
      }
    },

    "SubnetA" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VpcId" },
        "CidrBlock" : { "Fn::Select" : [ 0,  { "Fn::Cidr" : [ { "Ref" : "CidrRange" }, 3, { "Ref" : "MaskSize" } ] } ] },
        "AvailabilityZone" : { "Fn::Select" : [ 0 , { "Fn::GetAZs" : { "Ref" : "AWS::Region" } } ] },
        "Tags" : [
          { "Key" : "Name", "Value" : { "Fn::Sub" : "${SubnetGroupName}-A" } },
          { "Key" : "SubnetGroup", "Value" : { "Ref" : "SubnetGroupName" } }
        ]
      }
    },

    "SubnetARouteAssociation" : {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties" : {
        "RouteTableId" : { "Ref" : "RouteTable" },
        "SubnetId" : { "Ref" : "SubnetA" }
      }
    },

    "SubnetB" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VpcId" },
        "CidrBlock" : { "Fn::Select" : [ 1,  { "Fn::Cidr" : [ { "Ref" : "CidrRange" }, 3, { "Ref" : "MaskSize" } ] } ] },
        "AvailabilityZone" : { "Fn::Select" : [ 1 , { "Fn::GetAZs" : { "Ref" : "AWS::Region" } } ] },
        "Tags" : [
          { "Key" : "Name", "Value" : { "Fn::Sub" : "${SubnetGroupName}-B" } },
          { "Key" : "SubnetGroup", "Value" : { "Ref" : "SubnetGroupName" } }
        ]
      }
    },

    "SubnetBRouteAssociation" : {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties" : {
        "RouteTableId" : { "Ref" : "RouteTable" },
        "SubnetId" : { "Ref" : "SubnetB" }
      }
    },

    "SubnetC" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VpcId" },
        "CidrBlock" : { "Fn::Select" : [ 2,  { "Fn::Cidr" : [ { "Ref" : "CidrRange" }, 3, { "Ref" : "MaskSize" } ] } ] },
        "AvailabilityZone" : { "Fn::Select" : [ 2 , { "Fn::GetAZs" : { "Ref" : "AWS::Region" } } ] },
        "Tags" : [
          { "Key" : "Name", "Value" : { "Fn::Sub" : "${SubnetGroupName}-C" } },
          { "Key" : "SubnetGroup", "Value" : { "Ref" : "SubnetGroupName" } }
        ]
      }
    },

    "SubnetCRouteAssociation" : {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties" : {
        "RouteTableId" : { "Ref" : "RouteTable" },
        "SubnetId" : { "Ref" : "SubnetC" }
      }
    },

    "CidrParameters" : {
      "Type" : "AWS::SSM::Parameter",
      "Properties" : {
        "Name" : { "Fn::Sub" : "/Deimos/Subnets/${SubnetGroupName}-CIDR" },
        "Type" : "String",
        "Value" : { "Ref" : "CidrRange" }
      }
    },

    "SubnetParameters" : {
      "Type" : "AWS::SSM::Parameter",
      "Properties" : {
        "Name" : { "Fn::Sub" : "/Deimos/Subnets/${SubnetGroupName}" },
        "Type" : "StringList",
        "Value" : { "Fn::Join" : [ ",", [ 
          { "Ref" : "SubnetA" }
        , { "Ref" : "SubnetB" }
        , { "Ref" : "SubnetC" }
        ] ] }
      }
    }
  },

  "Outputs" : { 
    "SubnetList" : {
      "Description" : "List of Subnets within a group",
      "Value" : { "Fn::Join" : [ ",", [ 
        { "Ref" : "SubnetA" }
      , { "Ref" : "SubnetB" }
      , { "Ref" : "SubnetC" }
      ] ] },
      "Export" : { 
        "Name" : { "Fn::Sub" : "${SubnetGroupName}-Subnets" }
      }
    },

    "SubnetCidr" : {
      "Description" : "CIDR Range of the Entire Subnet Group",
      "Value" : { "Ref" : "CidrRange" },
      "Export" : { 
        "Name" : { "Fn::Sub" : "${SubnetGroupName}-CIDR" }
      }
    },

    "RouteTable" : {
      "Description" : "Route Table Assigned to this Subnet Group",
      "Value" : { "Ref" : "RouteTable" }
    }    
  }
}
